<div class="text-center m-5">
<h1>Home page</h1>


<% @categories.each do |category| %>
        <div class="col-xl-4 col-lg-4 col-md-6">
          <div class="single_recepie text-center">
          <% if can? :read, category %>
          <%= link_to category do %>
        <div class="card-1">
         <p><%= category.name %></p>
            <%= image_tag "#{category.icon}", size: "150x150", alt: 'icon' %>
            <p><%= category.author_id %></p>
        </div>
      <% end %>
          <% end %>
          </div>
        </div>
      <% end %>

      <div class="p-5  d-flex align-items-center justify-content-center">
      <button type="button" class="btn btn-secondary btn-lg w-400"><%= link_to "Create new category", new_category_path %></button></div>

      </div>
