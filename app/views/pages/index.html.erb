<div class="text-center p-3">
<% @categories.each do |category| %>
        <%# <div class="col-xl-4 col-lg-4 col-md-6"> %>
          
          <% if can? :read, category %>
          <%= link_to category do %>
        <div class="card-1">
        <div class="d-flex gap-3 ">
            <%= image_tag "#{category.icon}", size: "80x80", alt: 'icon' %>
        <ul>
        <li><p class="d-flex align-items-center justify-content-between "><%= category.name %></p></li>
        <li>
        <span class="created_at"><%= category.created_at.strftime('%F - %I:%H:%M %p') %></span>
        </li>
        </ul>
        <div class="mt-3">
        <h6 class="total_at"> <%= number_to_currency(category.transactions.sum(:amount)) %></h6>
        </div>
        </div>
        </div>
      <% end %>
          <% end %>
         
        <%# </div> %>
      <% end %>

  <div class="d-grid gap-2 col-12 mx-auto pt-5 ">
      <%= link_to "Create new category",  new_category_path, class: "btn create-category-btn bg-first text-white" %>
  </div>
</div>
