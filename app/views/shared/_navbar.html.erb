        <hr class='text-white'>
        </li>
        <li class="nav-item mt-2">
          <li><h2><%= link_to 'Transactions', transactions_path, class: "text-light" %></h2></li>
          <li><i class="bi bi-wallet2"></i></li>
          <hr class='text-white'>
