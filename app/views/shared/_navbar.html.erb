<nav class="navbar navbar-expand-xlg navbar-dark primary-color width">
  <div class="container-fluid">
    <% unless "#{action_name.capitalize} #{controller_name.capitalize.singularize}" == "Index Category" || "#{action_name.capitalize} #{controller_name.capitalize.singularize}" == "Index Transaction" || "#{action_name.capitalize} #{controller_name.capitalize.singularize}" == "Index Page" %>
        
        <% if "#{action_name.capitalize} #{controller_name.capitalize.singularize}" == "New Transaction" %>
          <%= link_to 'javascript:history.back()' do %>
            <i class="bi bi-arrow-left text-white fs-4"></i> 
          <% end %>
        <% else %>
          <%= link_to root_path do %>
            <i class="bi bi-arrow-left text-white fs-4"></i> 
          <% end %>
        <% end %>      
        
      <% else %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <% end %>
    
    <a class="navbar-brand" href="#">
    <% case "#{action_name.capitalize} #{controller_name.capitalize.singularize}" %>
        <% when "New Session" %>
          LOGIN
        <% when "New Registration" %>
          REGISTER
        <% when "New Password" %>
          RECOVER PASSWORD
        <% when "Show Category" %>
          SINGLE CATEGORY
        <% when "Index Category" %>
          CATEGORIES
        <% when "Index Transaction" %>
          TRANSACTIONS
        <% when "Show Transaction" %>
          SINGLE TRANSACTION
        <% when "New Transaction" %>
          ADD NEW TRANSACTION
        <% when "New Category" %>
          ADD NEW CATEGORY
        <% when "Index Page" %>
          CATEGORIES
        <% else %>
          <%= controller_name.upcase.singularize %>
        <% end %>
    </a>
    <% if user_signed_in? %>
    <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
