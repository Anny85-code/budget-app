 <div class="form-body">
 <%= link_to '<i class="fa fa-arrow-left" aria-hidden="true"></i>'.html_safe, root_path, class: 'back-form'%>
  <div class="container-fluid pt-5">
    <div class="container">
      <%= form_with model: @category, url: categories_path, class: " requires-validation" do |form| %>

<% if @category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% @category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

    <div class="col mb-0">
      <%= form.text_field :name, class: 'form-control', placeholder: 'name' %> 
    </div><br>
    
    <div class="col">
      <%= form.url_field :icon, class: "form-control", placeholder: 'Enter image url' %> <br>
    </div>
    
    <div class="col">
      <%= form.text_field :author_id, class: "form-control", value: current_user.id, hidden: true %> <br>
    </div>

  <div class="form-check">
      <input class="form-check-input mt-2" type="checkbox" value="" id="invalidCheck" required>
      <label class="form-check-label pt-1">I confirm that all data are correct</label>
  </div>
  
    <div class="form-button mt-3">
      <button id="submit" type="submit" class="btn btn-primary">Add Category</button>
    </div>
      <% end %>
    </div>
  </div>
</div>


 
