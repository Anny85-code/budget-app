<div id="<%= dom_id transaction %>">
  <p>
    <strong>Name:</strong>
    <%= transaction.name %>
  </p>

  <p>
    <strong>Amount:</strong>
    <%= transaction.amount %>
  </p>

  <p>
    <strong>User:</strong>
    <%= transaction.author_id %>
  </p>

  <p>
    <strong>Group:</strong>
    <%= transaction.group_id %>
  </p>

  <p>
    <strong>Date:</strong>
    <%= transaction.created_at.strftime('%F - %I:%H:%M %p') %>
  </p>

</div>
