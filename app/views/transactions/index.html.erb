<p style="color: green"><%= notice %></p>

<h1>Transactions</h1>
<p>
  <strong>Total transaction:</strong>
  <%= @total_transactions %>
</p>

<div id="transactions">
  <% @recent_transactions.each do |transaction| %>
    <%= render transaction %>
    <p>
      <%= link_to "Show this transaction", transaction %>
    </p>
  <% end %>
</div>

<%= link_to "New transaction", new_transaction_path %>
