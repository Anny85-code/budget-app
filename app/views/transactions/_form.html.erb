<%= form_with(model: transaction) do |form| %>
  <% if transaction.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
        <% transaction.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :amount, style: "display: block" %>
    <%= form.number_field :amount %>
  </div>

  <div>
    <%= form.label :author_id, style: "display: block" %>
    <%= form.text_field :author_id, value: current_user.id %>
  </div>

  <div>
    <%= form.label :group_id, style: "display: block" %>
    <div>
      <%= form.select :group_id, Group.all.collect {|g| [g.name, g.id]}, {include_blank: true} %>
    </div>
  </div>

  <div class="form-check">
    <input class="form-check-input mt-2" type="checkbox" value="" id="invalidCheck" required>
    <label class="form-check-label pt-1">I confirm that all data are correct</label>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
